      var today = new Date();
      var hourNow = today.getHours();
      var greeting;
      if (hourNow >= 18) {
        greeting = 'Good Evening and Welcome!';
      } else if (hourNow >= 12) {
        greeting = 'Good Afternoon and Welcome!';
      } else if (hourNow > 0) {
        greeting = 'Good Morning and Welcome!';
      } else {
        greeting = 'WELCOME!';
      }
      document.getElementById("js_greeting").innerHTML = ('<h3>' + greeting + '</h3>');

